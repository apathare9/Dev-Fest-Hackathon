                            <input type="radio" id="radio-2" name="salary" value="paid" <%= user.salary == 'paid' ? 'checked' : '' %>>
                            <label for="radio-2" class="radio-label">Paid</label>
                         </div>
         
                         <div class="radio inline">
                            <input type="radio" id="radio-3" name="salary" value="unpaid"  <%= user.salary == 'unpaid' ? 'checked' : '' %> >
